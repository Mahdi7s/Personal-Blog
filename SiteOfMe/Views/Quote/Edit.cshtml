@model SiteOfMe.Models.Quote
@{
    ViewBag.Title = "Edit";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.QuoteId)
    @Html.HiddenFor(model => model.QuoterId)
    @Html.HiddenFor(model => model.Quoter.QuoterId)
    
    <div class="editor-label">
        @Html.LabelFor(model => model.Quoter.Name)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Quoter.Name)
        @Html.ValidationMessageFor(model => model.Quoter.Name)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.QuoteText)
    </div>
    <div class="editor-field">
        @Html.TextAreaFor(model => model.QuoteText, new { @style = "height:100px;", @class="span6" })
        @Html.ValidationMessageFor(model => model.QuoteText)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.IsRightToLeft)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.IsRightToLeft)
    </div>
    <p>
        <input type="submit" value="Save" class="button" />
    </p>
}
