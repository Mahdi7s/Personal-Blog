@model SiteOfMe.Models.Quote
@using SiteOfMe.Models
@{
    ViewBag.Title = "New Quote";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false)
    <h3>سخن زیبا</h3>
    <hr />
    <div class="editor-label">
        @Html.LabelFor(model => model.Quoter)
        @Html.ActionLink("ویرایش", "Index", "Quoter")
    </div>
    
    if(ViewBag.Quoters != null) {
    <div class="editor-field">
        @Html.DropDownListFor(model=> model.QuoterId, ((Quoter[])ViewBag.Quoters).Select(x=> new SelectListItem{ Value = x.QuoterId.ToString(), Text=x.Name}))
        @Html.ValidationMessageFor(model => model.QuoterId)
    </div>
}

    <div class="editor-label">
        @Html.LabelFor(model => model.QuoteText)
    </div>
    <div class="editor-field">
        @Html.TextAreaFor(model => model.QuoteText, new { @style = "width:60%;height:150px;" })
        @Html.ValidationMessageFor(model => model.QuoteText)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.IsRightToLeft)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.IsRightToLeft)
        @Html.ValidationMessageFor(model => model.IsRightToLeft)
    </div>

    <p>
        <input type="submit" value="ثبت" class="button" />
    </p>
}
